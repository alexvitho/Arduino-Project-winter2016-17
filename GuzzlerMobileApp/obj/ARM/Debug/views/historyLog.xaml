<Page x:ConnectionId='1'
    x:Class="GuzzlerMobileApp.views.historyLog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GuzzlerMobileApp.views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="{ThemeResource splashBackColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="0.3*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Grid.Column="1">
            <TextBox x:ConnectionId='4' Style="{StaticResource TitleText}" FontSize="24"                                                                  FontWeight="Light" />
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1" >
            <TextBox Style="{StaticResource explanationText}" FontSize="20" Text="Pick a date to see how much your device guzzled" VerticalAlignment="Top" />
        </Grid>

        <Grid Grid.Column="1" Grid.Row="4">
            <CalendarView x:ConnectionId='3'  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
             HorizontalDayItemAlignment="Center"                                                            CalendarItemBackground="#FFE86B4F" Background="#FFEE8962" BorderBrush="{x:Null}" OutOfScopeBackground="#FFF1B5B5" SelectedBorderBrush="#FFB8BDC1" SelectedHoverBorderBrush="{x:Null}" SelectedPressedBorderBrush="#FFBF1C1C" TodayForeground="Black"   FontWeight="Bold" FontFamily="Showcard Gothic" FirstOfMonthLabelFontFamily="Showcard Gothic" FirstOfYearDecadeLabelFontFamily="Showcard Gothic" MonthYearItemFontFamily="Showcard Gothic" FirstOfMonthLabelFontWeight="ExtraBlack" FirstOfYearDecadeLabelFontWeight="ExtraBlack"/>
        </Grid>
        <Grid Grid.Row="6" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='2' Content="&lt; Back"  Style="{StaticResource defaultButton}" HorizontalAlignment="Stretch" VerticalAlignment="Center"                          />
        </Grid>
    </Grid>
</Page>

