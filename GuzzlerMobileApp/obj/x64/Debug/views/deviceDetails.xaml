<Page x:ConnectionId='1'
    x:Class="GuzzlerMobileApp.views.deviceDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GuzzlerMobileApp.views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="{StaticResource splashBackColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="2*"  />
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="1*" MinHeight="45" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="0.6*" />
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="0.3*" />
        
        </Grid.RowDefinitions>
        <Grid Grid.Column="1" Grid.Row="1">
            <TextBox Style="{StaticResource TitleText}" Text="Device Details"  FontSize="26" VerticalAlignment="Center"/>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="2">
            <TextBox x:ConnectionId='9' Style="{StaticResource TitleText}" FontSize="16"                                           FontWeight="Light" Background="Transparent"/>

        </Grid>
        <Grid Grid.Column="1" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" >
                <TextBox Style="{StaticResource explanationText}" Text="GuzzleR ID: " HorizontalAlignment="Right" />
            </Grid>
            <Grid Grid.Column="1" >

                <TextBox x:ConnectionId='8'  MinWidth="128"  Style="{StaticResource saniaStyle}"  HorizontalAlignment="Center" VerticalAlignment="Center"                                        IsReadOnly="True" HorizontalContentAlignment="Center"/>
            </Grid>
            <Grid Grid.ColumnSpan="2" />
        </Grid>
        <Grid Grid.Row="4" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Column="0" Grid.Row="0">
                <TextBox Style="{StaticResource explanationText}" Text="Device Nick:"  />
            </Grid>
            <Grid Grid.Column="1" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="44*"/>
                    <ColumnDefinition Width="29*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:ConnectionId='7'   Background="{StaticResource buttonBack}" Style="{StaticResource saniaStyle}"  HorizontalAlignment="Stretch" VerticalAlignment="Center"                                       Grid.ColumnSpan="2" Margin="0,0,10,0" FontSize="17" />
            </Grid>
            <Grid Grid.Column="0" Grid.Row="1">
                <TextBox Style="{StaticResource explanationText}" Text="Device Type"    />
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1">
                <TextBox x:ConnectionId='6'   Background="{StaticResource buttonBack}" Style="{StaticResource saniaStyle}"  HorizontalAlignment="Stretch" VerticalAlignment="Center"                                     />
            </Grid>
            <Grid Grid.Column="0" Grid.Row="2">
                <TextBox Style="{StaticResource explanationText}" Text="Manufacturer Name: "  FontSize="14"  />
            </Grid>
            <Grid Grid.Column="1" Grid.Row="2">
                <TextBox x:ConnectionId='5'   Background="{StaticResource buttonBack}" Style="{StaticResource saniaStyle}"  HorizontalAlignment="Stretch" VerticalAlignment="Center"                                           />
            </Grid>
            <Grid Grid.Column="0" Grid.Row="3">
                <TextBox Style="{StaticResource explanationText}" Text="Device Model:"  />
            </Grid>
            <Grid Grid.Column="1" Grid.Row="3">
                <TextBox x:ConnectionId='4'   Background="{StaticResource buttonBack}" Style="{StaticResource saniaStyle}"  HorizontalAlignment="Stretch" VerticalAlignment="Center"                                   />
            </Grid>
            <Grid Grid.Column="0" Grid.Row="4">
                <TextBox Style="{StaticResource explanationTextLight}" Text="Serial Number: "  />
            </Grid>
            <Grid Grid.Column="1" Grid.Row="4">
                <TextBox x:ConnectionId='3'   Background="{StaticResource buttonBack}" Style="{StaticResource saniaStyle}"  HorizontalAlignment="Stretch" VerticalAlignment="Center"                                    />
            </Grid>


        </Grid>
        <Grid Grid.Row="6" Grid.Column="1">
        </Grid>
        <Grid Grid.Row="7" Grid.Column="1">
            <Button x:ConnectionId='2' Style="{StaticResource defaultButton}" Content="&lt; Back"  HorizontalAlignment="Left" VerticalAlignment="Center"                          />
        </Grid>
    </Grid>
</Page>

