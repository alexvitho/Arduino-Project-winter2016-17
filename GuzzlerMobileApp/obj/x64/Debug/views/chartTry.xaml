<Page
    xmlns:Charting="using:WinRTXamlToolkit.Controls.DataVisualization.Charting"
    x:Class="GuzzlerMobileApp.views.chartTry"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GuzzlerMobileApp.views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:datavis="using:WinRTXamlToolkit.Controls.DataVisualization"

    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../styles.xaml"/>

            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>

    </Page.Resources>


    <Grid Background="{StaticResource splashBackColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="6*" />
            <RowDefinition Height="6*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Grid.Column="1">
            <Charting:Chart x:ConnectionId='2' Margin="0,20,0,0" Foreground="Yellow"  x:Name="LineChart" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"   Title="Consumption chart" BorderThickness="2" BorderBrush="Magenta"  >
                <Charting:LineSeries    ItemsSource="{Binding Data1}" IndependentValuePath="Day"  VerticalAlignment="Stretch" DependentValuePath="Val" IsSelectionEnabled="True"  />
                <Charting:Chart.LegendStyle>
                    <Style TargetType="datavis:Legend">
                        <Setter Property="Width" Value="0" />
                    </Style>
                </Charting:Chart.LegendStyle>
            </Charting:Chart>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1">
            <Charting:Chart x:ConnectionId='1' Margin="0,20,0,0"  x:Name="PieChart" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"   Title="Consumption chart" BorderThickness="2" BorderBrush="Magenta"  >
                <Charting:PieSeries    ItemsSource="{Binding Data2}"  IndependentValuePath="Day" DependentValuePath="Val"  />
                <Charting:Chart.LegendStyle>
                    <Style TargetType="datavis:Legend">
                        <Setter Property="Width" Value="30"  />
                    </Style>
                </Charting:Chart.LegendStyle>
            </Charting:Chart>
        </Grid>

    </Grid>
</Page>

